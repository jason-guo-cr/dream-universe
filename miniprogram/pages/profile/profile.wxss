/* pages/profile/profile.wxss */
.user-card {
  padding: 28rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #57b9ff;
  margin-right: 20rpx;
  background: rgba(9, 23, 37, 0.84);
}

.user-details {
  flex: 1;
}

.nickname {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #e7f4ff;
}

.edit-icon {
  font-size: 22rpx;
  margin-left: 14rpx;
  opacity: 0.95;
  color: #bfe6ff;
  border: 1rpx solid rgba(110, 184, 245, 0.52);
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
}

.nickname-edit {
  display: flex;
  flex-direction: column;
}

.nickname-input {
  background: rgba(9, 23, 37, 0.84);
  border: 1rpx solid rgba(103, 160, 210, 0.34);
  border-radius: 12rpx;
  padding: 14rpx 18rpx;
  font-size: 32rpx;
  color: #e7f4ff;
  margin-bottom: 16rpx;
}

.edit-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn, .cancel-btn {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.save-btn {
  background: linear-gradient(135deg, #2e73bb 0%, #3ec9c2 100%);
  color: #e7f4ff;
}

.cancel-btn {
  background: rgba(22, 44, 68, 0.72);
  color: rgba(201, 231, 252, 0.84);
  border: 1rpx solid rgba(103, 160, 210, 0.34);
}

.user-id {
  font-size: 24rpx;
  color: rgba(183, 211, 233, 0.82);
  margin-top: 10rpx;
}

.stats {
  display: flex;
  justify-content: space-between;
  padding: 26rpx 8rpx;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 44rpx;
  font-weight: bold;
  color: #9fdcff;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(183, 211, 233, 0.82);
  margin-top: 10rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(103, 160, 210, 0.24);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item text:first-child {
  font-size: 30rpx;
  color: #e7f4ff;
}

.arrow {
  color: rgba(168, 221, 255, 0.78);
  font-size: 32rpx;
}

.about-popup {
  background: linear-gradient(160deg, rgba(16, 34, 52, 0.94) 0%, rgba(12, 28, 44, 0.96) 100%);
  border-radius: 24rpx;
  padding: 48rpx 34rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: left;
  border: 1rpx solid rgba(104, 168, 224, 0.34);
  box-shadow: 0 16rpx 34rpx rgba(2, 8, 18, 0.5);
}

.about-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #bde9ff;
  margin-bottom: 12rpx;
}

.about-version {
  font-size: 24rpx;
  color: rgba(183, 211, 233, 0.76);
  margin-bottom: 24rpx;
}

.about-desc {
  font-size: 28rpx;
  color: #e7f4ff;
  line-height: 1.8;
  margin-bottom: 34rpx;
}

.about-close {
  background: linear-gradient(135deg, #2e73bb 0%, #3ec9c2 100%);
  color: #e7f4ff;
  padding: 16rpx 40rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  display: inline-block;
}
