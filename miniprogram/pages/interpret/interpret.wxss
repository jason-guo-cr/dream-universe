/* pages/interpret/interpret.wxss */
.intro-text {
  font-size: 28rpx;
  color: #cde7f7;
  line-height: 1.75;
}

.dream-item {
  display: flex;
  align-items: flex-start;
  transition: all 0.25s ease;
  border: 1rpx solid rgba(103, 160, 210, 0.24);
}

.dream-item.selected {
  border-color: rgba(87, 185, 255, 0.6);
  background: rgba(87, 185, 255, 0.1);
  box-shadow: 0 12rpx 24rpx rgba(5, 16, 23, 0.35);
}

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid rgba(143, 195, 234, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.dream-item.selected .checkbox {
  background: #57b9ff;
  border-color: #57b9ff;
}

.check-icon {
  color: #ffffff;
  font-size: 28rpx;
}

.dream-info {
  flex: 1;
  min-width: 0;
}

.dream-date {
  font-size: 24rpx;
  color: #bfe6ff;
  margin-bottom: 10rpx;
}

.dream-content {
  font-size: 28rpx;
  color: #e7f4ff;
  line-height: 1.72;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.dream-images {
  display: flex;
  gap: 8rpx;
  margin-top: 16rpx;
}

.dream-images image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  object-fit: cover;
  border: 1rpx solid rgba(104, 160, 212, 0.36);
}

.actions {
  margin-top: 26rpx;
}

.actions .btn {
  width: 100%;
  text-align: center;
  border-radius: 18rpx;
}

.interpretation-content {
  font-size: 28rpx;
  line-height: 1.95;
  color: #e7f4ff;
  white-space: pre-wrap;
}

.interpreted-dreams {
  margin-top: 30rpx;
  padding-top: 22rpx;
  border-top: 1rpx solid rgba(103, 160, 210, 0.24);
}

.interpreted-item {
  margin-bottom: 22rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(103, 160, 210, 0.2);
}

.interpreted-item:last-child {
  border-bottom: none;
}

.mini-date {
  font-size: 24rpx;
  color: #bfe6ff;
  margin-bottom: 10rpx;
}

.mini-content {
  font-size: 26rpx;
  color: rgba(214, 237, 255, 0.84);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.mini-images {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}

.mini-images image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #e7f4ff;
  background: linear-gradient(160deg, rgba(16, 34, 52, 0.94) 0%, rgba(12, 28, 44, 0.96) 100%);
  border: 1rpx solid rgba(104, 168, 224, 0.32);
  border-radius: 20rpx;
  padding: 30rpx 34rpx;
  box-shadow: 0 16rpx 34rpx rgba(2, 8, 18, 0.5);
}

.loading-tip {
  font-size: 24rpx;
  color: rgba(183, 211, 233, 0.84);
  margin-top: 10rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(171, 213, 245, 0.28);
  border-top-color: #57b9ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
