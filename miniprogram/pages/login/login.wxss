.login-page {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.login-card {
  width: 100%;
  max-width: 680rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #bde9ff;
  margin-bottom: 14rpx;
}

.login-subtitle {
  font-size: 26rpx;
  line-height: 1.7;
  color: rgba(183, 211, 233, 0.86);
  margin-bottom: 32rpx;
}

.login-btn {
  width: 100%;
}

.login-tip {
  margin-top: 18rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: rgba(173, 208, 236, 0.72);
}
