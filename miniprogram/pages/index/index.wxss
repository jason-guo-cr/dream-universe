/* pages/index/index.wxss - 首页宇宙时间轴重制 */
.container {
  position: relative;
  overflow: hidden;
}

.container > view:not(.cosmos-layer):not(.cosmos-stars):not(.nebula-vignette) {
  position: relative;
  z-index: 2;
}

.nebula-vignette {
  position: absolute;
  inset: 0;
  z-index: 1;
  pointer-events: none;
  background: radial-gradient(ellipse at center, transparent 40%, rgba(3, 9, 18, 0.35) 100%);
}

@keyframes etherealFadeIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes softGlow {
  0%,
  100% {
    opacity: 0.62;
    transform: scale(1);
  }

  50% {
    opacity: 1;
    transform: scale(1.06);
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(100%);
  }
}

.ethereal-fade {
  animation: etherealFadeIn 0.56s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  opacity: 0;
}

.cosmos-layer {
  position: absolute;
  border-radius: 50%;
  filter: blur(22rpx);
  opacity: 0.56;
  pointer-events: none;
  z-index: 0;
}

.cosmos-layer--one {
  width: 440rpx;
  height: 440rpx;
  top: -120rpx;
  right: -96rpx;
  background: radial-gradient(circle, rgba(74, 171, 255, 0.24) 0%, rgba(74, 171, 255, 0) 70%);
}

.cosmos-layer--two {
  width: 540rpx;
  height: 540rpx;
  left: -180rpx;
  top: 220rpx;
  background: radial-gradient(circle, rgba(63, 226, 206, 0.16) 0%, rgba(63, 226, 206, 0) 74%);
}

.cosmos-stars {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 1;
  background-image:
    radial-gradient(circle at 12% 18%, rgba(224, 241, 255, 0.38) 0 2rpx, transparent 2rpx),
    radial-gradient(circle at 82% 10%, rgba(224, 241, 255, 0.3) 0 2rpx, transparent 2rpx),
    radial-gradient(circle at 66% 36%, rgba(224, 241, 255, 0.22) 0 1.5rpx, transparent 1.5rpx),
    radial-gradient(circle at 24% 54%, rgba(224, 241, 255, 0.2) 0 1.5rpx, transparent 1.5rpx),
    radial-gradient(circle at 74% 74%, rgba(224, 241, 255, 0.26) 0 2rpx, transparent 2rpx),
    radial-gradient(circle at 18% 84%, rgba(224, 241, 255, 0.18) 0 1.5rpx, transparent 1.5rpx);
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 16rpx 0 22rpx;
}

.header-actions .btn {
  flex: 1;
  border-radius: 16rpx;
}

.record-entry {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-height: 92rpx;
  padding: 14rpx 18rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(99, 170, 230, 0.34);
  background: linear-gradient(145deg, rgba(29, 68, 106, 0.88) 0%, rgba(24, 56, 90, 0.82) 100%);
  box-shadow: 0 14rpx 30rpx rgba(3, 12, 24, 0.38);
  box-sizing: border-box;
  transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
}

.record-entry--active {
  transform: translateY(-1rpx) scale(0.994);
  border-color: rgba(111, 195, 255, 0.56);
  box-shadow: 0 16rpx 34rpx rgba(3, 12, 24, 0.44);
}

.record-plus {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  line-height: 1;
  color: #f4fbff;
  background: linear-gradient(140deg, rgba(86, 185, 255, 0.94) 0%, rgba(61, 219, 199, 0.92) 100%);
  box-shadow: 0 0 0 2rpx rgba(133, 212, 255, 0.18), 0 10rpx 20rpx rgba(42, 144, 227, 0.34);
  flex-shrink: 0;
}

.record-texts {
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.record-title {
  font-size: 28rpx;
  color: #eaf7ff;
  font-weight: 600;
  line-height: 1.35;
}

.record-subtitle {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: rgba(188, 221, 244, 0.84);
  line-height: 1.35;
}

.interpret-entry {
  min-height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.date-filter {
  margin-bottom: 20rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 22rpx;
  background: rgba(9, 23, 37, 0.84);
  border-radius: 16rpx;
  border: 1rpx solid rgba(103, 160, 210, 0.32);
}

.date-picker .arrow {
  font-size: 18rpx;
  color: #8fd4ff;
}

.date-picker text:first-child {
  color: #dff1ff;
  font-size: 26rpx;
}

.ethereal-timeline {
  position: relative;
  padding-left: 24rpx;
}

.ethereal-timeline::before {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background: linear-gradient(180deg,
      rgba(87, 185, 255, 0) 0%,
      rgba(87, 185, 255, 0.34) 12%,
      rgba(87, 185, 255, 0.2) 52%,
      rgba(87, 185, 255, 0.08) 90%,
      rgba(87, 185, 255, 0) 100%);
}

.timeline-date-group {
  margin-bottom: 32rpx;
  position: relative;
}

.timeline-date-marker {
  position: relative;
  margin-bottom: 20rpx;
  padding-left: 32rpx;
  display: flex;
  align-items: center;
}

.date-glow {
  position: absolute;
  left: -4rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(87, 185, 255, 0.9) 0%, rgba(87, 185, 255, 0) 72%);
  animation: softGlow 3s ease-in-out infinite;
}

.date-glow::before {
  content: '';
  position: absolute;
  inset: 4rpx;
  border-radius: 50%;
  background: #57b9ff;
  box-shadow: 0 0 12rpx rgba(87, 185, 255, 0.62);
}

.date-content {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.date-day {
  font-size: 26rpx;
  color: #bfe8ff;
  font-weight: 500;
  text-shadow: 0 0 18rpx rgba(87, 185, 255, 0.28);
}

.dream-count {
  font-size: 22rpx;
  color: rgba(172, 219, 250, 0.62);
  font-weight: 300;
}

.timeline-dreams {
  padding-left: 32rpx;
}

.timeline-card {
  position: relative;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
  background: linear-gradient(160deg,
      rgba(16, 34, 52, 0.78) 0%,
      rgba(12, 29, 45, 0.7) 54%,
      rgba(16, 36, 55, 0.78) 100%);
  border: 1rpx solid rgba(109, 172, 227, 0.2);
  overflow: hidden;
  backdrop-filter: blur(12rpx);
  transition: all 0.28s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.card-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 30% 20%, rgba(87, 185, 255, 0.08) 0%, transparent 52%);
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.34s ease;
}

.timeline-card--active {
  transform: translateY(-2rpx) scale(1.01);
  border-color: rgba(87, 185, 255, 0.42);
  box-shadow:
    0 18rpx 38rpx rgba(3, 9, 19, 0.42),
    0 0 28rpx rgba(87, 185, 255, 0.1) inset;
}

.timeline-card--active .card-glow {
  opacity: 1;
}

.card-content {
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

.dream-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.dream-index {
  font-size: 20rpx;
  color: rgba(173, 220, 252, 0.72);
  font-weight: 300;
  letter-spacing: 1rpx;
}

.dream-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 14rpx;
  background: rgba(87, 185, 255, 0.1);
  color: rgba(189, 232, 255, 0.94);
  border-radius: 999rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(97, 181, 244, 0.28);
  font-weight: 300;
}

.tag-glow {
  background: rgba(87, 185, 255, 0.14);
  box-shadow: 0 0 12rpx rgba(87, 185, 255, 0.18);
}

.tag-icon {
  font-size: 16rpx;
  opacity: 0.86;
}

.ethereal-text {
  font-size: 28rpx;
  color: rgba(229, 244, 255, 0.95);
  line-height: 1.75;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

.ethereal-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.ethereal-image-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.ethereal-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
  border: 1rpx solid rgba(104, 160, 212, 0.32);
}

.image-shimmer {
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.12), transparent);
  animation: shimmer 2s infinite;
}

.card-hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 14rpx 24rpx;
  border-top: 1rpx solid rgba(87, 185, 255, 0.1);
}

.hint-text {
  font-size: 20rpx;
  color: rgba(170, 218, 251, 0.56);
  font-weight: 300;
}

.hint-line {
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, rgba(87, 185, 255, 0.24), transparent);
}

.quote {
  background: linear-gradient(140deg, rgba(22, 47, 75, 0.72) 0%, rgba(13, 33, 55, 0.7) 100%);
  border-left: 3rpx solid rgba(87, 185, 255, 0.72);
  box-shadow: 0 10rpx 28rpx rgba(2, 10, 18, 0.34);
  backdrop-filter: blur(8rpx);
}

.empty {
  position: relative;
  text-align: center;
  padding: 84rpx 20rpx;
  color: rgba(183, 211, 233, 0.82);
}

.empty-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(87, 185, 255, 0.12) 0%, transparent 70%);
  pointer-events: none;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 60rpx;
  color: rgba(118, 196, 247, 0.56);
  margin-bottom: 24rpx;
  border-radius: 50%;
  background: rgba(87, 185, 255, 0.1);
  border: 1rpx solid rgba(87, 185, 255, 0.24);
  animation: softGlow 3s ease-in-out infinite;
}

.empty-title {
  display: block;
  font-size: 28rpx;
  color: rgba(214, 237, 255, 0.94);
  margin-bottom: 10rpx;
  font-weight: 300;
}

.empty-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(183, 211, 233, 0.66);
  font-weight: 300;
}

.loading {
  text-align: center;
  padding: 32rpx;
  color: rgba(173, 208, 236, 0.82);
  position: relative;
}

.loading-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(87, 185, 255, 0.16) 0%, transparent 70%);
  animation: softGlow 2s ease-in-out infinite;
}

.loading-more {
  border: 1rpx solid rgba(103, 160, 210, 0.26);
  border-radius: 16rpx;
  background: rgba(15, 33, 52, 0.56);
  backdrop-filter: blur(8rpx);
  position: relative;
  overflow: hidden;
}

.more-glow {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at center, rgba(87, 185, 255, 0.12) 0%, transparent 72%);
  opacity: 0;
  transition: opacity 0.3s;
}

.loading-more:active .more-glow {
  opacity: 1;
}
